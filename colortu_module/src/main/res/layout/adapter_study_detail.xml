<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data></data>

    <LinearLayout
        android:id="@+id/studydetail_itemview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_110"
        android:layout_marginBottom="@dimen/dimen_10"
        android:background="@mipmap/icon_base_btnbg"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/studydetail_headimg"
                android:layout_width="@dimen/dimen_40"
                android:layout_height="@dimen/dimen_40"
                android:layout_marginLeft="@dimen/dimen_10"></de.hdodenhof.circleimageview.CircleImageView>

            <TextView
                android:id="@+id/studydetail_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_5"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="1"
                android:textColor="@color/base_white1"
                android:textSize="@dimen/size_25"></TextView>

            <TextView
                android:id="@+id/studydetail_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_5"
                android:layout_marginRight="@dimen/dimen_10"
                android:gravity="center_vertical"
                android:textColor="@color/base_white1"
                android:textSize="@dimen/size_20"></TextView>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/studydetail_stateicon"
                    android:layout_width="@dimen/dimen_25"
                    android:layout_height="@dimen/dimen_25"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:scaleType="fitXY"></ImageView>

                <TextView
                    android:id="@+id/studydetail_statetip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:textColor="@color/base_black1"
                    android:textSize="@dimen/size_20"></TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/studydetail_likeview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="@dimen/dimen_30"
                android:layout_toLeftOf="@+id/studydetail_play"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/studydetail_likeicon"
                    android:layout_width="@dimen/dimen_35"
                    android:layout_height="@dimen/dimen_35"
                    android:scaleType="fitXY"
                    android:src="@mipmap/icon_study_unlike"></ImageView>

                <TextView
                    android:id="@+id/studydetail_likenum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/base_black1"
                    android:textSize="@dimen/size_23"></TextView>
            </LinearLayout>

            <ImageView
                android:id="@+id/studydetail_play"
                android:layout_width="@dimen/dimen_40"
                android:layout_height="@dimen/dimen_40"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dimen_10"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_play_stop"></ImageView>
        </RelativeLayout>
    </LinearLayout>
</layout>