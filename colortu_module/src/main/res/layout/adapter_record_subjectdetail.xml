<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data></data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/base_black1">

        <LinearLayout
            android:id="@+id/subjectdetail_itemview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_7"
            android:background="@color/base_blue11"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15"
                android:layout_marginRight="@dimen/dimen_10"
                android:layout_marginBottom="@dimen/dimen_15"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/subjectdetail_serialnumber"
                    android:layout_width="@dimen/dimen_60"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/base_white1"
                    android:textSize="@dimen/size_30"></TextView>

                <TextView
                    android:id="@+id/subjectdetail_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/base_white1"
                    android:textSize="@dimen/size_30"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_15"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/subjectdetail_play"
                    android:layout_width="@dimen/dimen_70"
                    android:layout_height="@dimen/dimen_70"
                    android:layout_marginLeft="@dimen/dimen_60"
                    android:scaleType="fitXY"
                    android:src="@mipmap/icon_play_stop"></ImageView>

                <TextView
                    android:id="@+id/subjectdetail_duration"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:layout_weight="1"
                    android:textColor="@color/base_white1"
                    android:textSize="@dimen/size_26"
                    android:textStyle="bold"></TextView>

                <ImageView
                    android:id="@+id/subjectdetail_delete"
                    android:layout_width="@dimen/dimen_50"
                    android:layout_height="@dimen/dimen_50"
                    android:layout_marginRight="@dimen/dimen_20"
                    android:scaleType="fitXY"
                    android:src="@mipmap/icon_base_delete"
                    android:visibility="gone"></ImageView>
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>
</layout>