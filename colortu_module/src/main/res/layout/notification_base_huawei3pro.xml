<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/base_transparent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/huawei3pro_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_5"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/huawei3pro_icon"
            android:layout_width="@dimen/dimen_40"
            android:layout_height="@dimen/dimen_40"
            android:layout_marginLeft="@dimen/dimen_10"
            android:scaleType="fitXY"></ImageView>

        <TextView
            android:id="@+id/huawei3pro_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_5"
            android:layout_marginRight="@dimen/dimen_20"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/base_white1"
            android:textSize="@dimen/size_18"
            android:textStyle="bold"></TextView>

        <ImageView
            android:id="@+id/huawei3pro_cancel"
            android:layout_width="@dimen/dimen_30"
            android:layout_height="@dimen/dimen_30"
            android:layout_marginRight="@dimen/dimen_10"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_base_cancel"></ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_5"
        android:gravity="center|center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/huawei3pro_last"
            android:layout_width="@dimen/dimen_50"
            android:layout_height="@dimen/dimen_40">

            <ImageView
                android:id="@+id/huawei3pro_lasticon"
                android:layout_width="@dimen/dimen_30"
                android:layout_height="@dimen/dimen_30"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"></ImageView>
        </RelativeLayout>

        <ImageView
            android:id="@+id/huawei3pro_play"
            android:layout_width="@dimen/dimen_40"
            android:layout_height="@dimen/dimen_40"
            android:layout_marginLeft="@dimen/dimen_20"
            android:layout_marginRight="@dimen/dimen_20"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_play_start"></ImageView>

        <RelativeLayout
            android:id="@+id/huawei3pro_next"
            android:layout_width="@dimen/dimen_50"
            android:layout_height="@dimen/dimen_40">

            <ImageView
                android:id="@+id/huawei3pro_nexticon"
                android:layout_width="@dimen/dimen_30"
                android:layout_height="@dimen/dimen_30"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"></ImageView>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>