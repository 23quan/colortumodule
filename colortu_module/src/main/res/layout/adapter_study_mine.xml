<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data></data>

    <LinearLayout
        android:id="@+id/mine_itemview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_160"
        android:layout_marginBottom="@dimen/dimen_10"
        android:background="@mipmap/icon_colortu_btnbg"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_10"
        android:paddingRight="@dimen/dimen_10">

        <TextView
            android:id="@+id/mine_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:textColor="@color/base_white1"
            android:textSize="@dimen/size_30"
            android:textStyle="bold"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mine_rank"
                android:layout_width="@dimen/dimen_30"
                android:layout_height="@dimen/dimen_30"
                android:scaleType="fitXY"></ImageView>

            <TextView
                android:id="@+id/mine_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_15"
                android:textColor="@color/base_black1"
                android:textSize="@dimen/size_20"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/mine_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_15"
                android:textColor="@color/base_black1"
                android:textSize="@dimen/size_20"
                android:textStyle="bold"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mine_command"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/base_black1"
                android:textSize="@dimen/size_20"
                android:textStyle="bold"></TextView>

            <ImageView
                android:id="@+id/mine_switch"
                android:layout_width="@dimen/dimen_60"
                android:layout_height="@dimen/dimen_30"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginRight="@dimen/dimen_10"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_study_open"
                android:visibility="gone"></ImageView>

            <ImageView
                android:id="@+id/mine_upgrade"
                android:layout_width="@dimen/dimen_50"
                android:layout_height="@dimen/dimen_50"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_study_upgrade"></ImageView>
        </LinearLayout>
    </LinearLayout>
</layout>