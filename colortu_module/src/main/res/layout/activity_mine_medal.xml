<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data></data>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/medal_parentview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/base_black1"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dimen_180"
                android:layout_height="@dimen/dimen_185"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_15"
                android:layout_marginBottom="@dimen/dimen_20"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_work_logo1"></ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginRight="@dimen/dimen_20"
                android:text="@string/colortu_message"
                android:textColor="@color/base_white1"
                android:textSize="@dimen/size_30"></TextView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>