<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data></data>

    <LinearLayout
        android:id="@+id/plazaofficial_itemview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_130"
        android:layout_marginBottom="@dimen/dimen_10"
        android:background="@mipmap/icon_base_btnbg"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/plazaofficial_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_marginRight="@dimen/dimen_10"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/base_white1"
            android:textSize="@dimen/size_30"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_marginRight="@dimen/dimen_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/plazaofficial_area"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_5"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/base_black1"
                android:textSize="@dimen/size_25"></TextView>

            <TextView
                android:id="@+id/plazaofficial_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_5"
                android:textColor="@color/base_black1"
                android:textSize="@dimen/size_25"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right">

            <ImageView
                android:layout_width="@dimen/dimen_35"
                android:layout_height="@dimen/dimen_35"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_study_like"></ImageView>

            <TextView
                android:id="@+id/plazaofficial_likenum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_5"
                android:layout_marginRight="@dimen/dimen_10"
                android:textColor="@color/base_yellow2"
                android:textSize="@dimen/size_23"></TextView>
        </LinearLayout>
    </LinearLayout>
</layout>