<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_transparent">

    <ImageView
        android:id="@+id/smallplayer_cancel"
        android:layout_width="@dimen/dimen_30"
        android:layout_height="@dimen/dimen_30"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_10"
        android:scaleType="fitXY"
        android:src="@mipmap/icon_base_cancel"></ImageView>

    <LinearLayout
        android:id="@+id/smallplayer_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/smallplayer_icon"
            android:layout_width="@dimen/dimen_30"
            android:layout_height="@dimen/dimen_30"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dimen_10"
            android:scaleType="fitXY"></ImageView>

        <TextView
            android:id="@+id/smallplayer_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dimen_5"
            android:layout_toRightOf="@+id/notification_icon"
            android:textColor="@color/base_white1"
            android:textSize="@dimen/size_18"
            android:textStyle="bold"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/smallplayer_view"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/dimen_5"
        android:gravity="center|center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/smallplayer_last"
            android:layout_width="@dimen/dimen_30"
            android:layout_height="@dimen/dimen_30"
            android:scaleType="fitXY"></ImageView>

        <ImageView
            android:id="@+id/smallplayer_play"
            android:layout_width="@dimen/dimen_40"
            android:layout_height="@dimen/dimen_40"
            android:layout_marginLeft="@dimen/dimen_20"
            android:layout_marginRight="@dimen/dimen_20"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_play_start"></ImageView>

        <ImageView
            android:id="@+id/smallplayer_next"
            android:layout_width="@dimen/dimen_30"
            android:layout_height="@dimen/dimen_30"
            android:scaleType="fitXY"></ImageView>
    </LinearLayout>
</RelativeLayout>